<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/black">


    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="37dp"
        android:fontFamily="@font/bigpixels"
        android:text="@string/GameCritics"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="30sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/bigpixels"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="20sp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fishIdleGif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:src="@drawable/fishidle" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/robotLoadingGif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:src="@drawable/spinningfish" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/policemanGifError"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="198dp"
        android:src="@drawable/policemanerrorgif" />


    <ImageView
        android:layout_width="307dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="378dp"
        android:src="@drawable/textbox" />

    <ImageView
        android:layout_width="307dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="217dp"
        android:src="@drawable/textbox" />

    <ImageView
        android:layout_width="307dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="324dp"
        android:src="@drawable/textbox" />

    <ImageView
        android:layout_width="307dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="272dp"
        android:src="@drawable/textbox" />

    <EditText
        android:id="@+id/registerUsername"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/smallpixels"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="317dp"
        android:layout_marginBottom="17dp"
        android:width="200dp"
        android:background="@drawable/edit_text"
        android:inputType="textAutoComplete"
        android:hint="Username"
        android:paddingLeft="10dp" />


    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/smallpixels"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="371dp"
        android:width="200dp"
        android:height="30dp"
        android:background="@drawable/edit_text"
        android:inputType="textPassword"
        android:hint="Password"
        android:paddingLeft="10dp" />
    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/smallpixels"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="422dp"
        android:width="200dp"
        android:height="30dp"
        android:background="@drawable/edit_text"
        android:inputType="textAutoComplete"
        android:hint="Email"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/registerNumber"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/smallpixels"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="479dp"
        android:width="200dp"
        android:background="@drawable/edit_text"
        android:hint="Phone number"
        android:inputType="number"
        android:paddingLeft="10dp" />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/smallpixels"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="91dp"
        android:width="150dp"
        android:height="20dp"
        android:text="Register"
        app:cornerRadius="0dp"  />
</RelativeLayout>